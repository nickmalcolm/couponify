<% content_for(:head) do %>
  <%= javascript_include_tag "visualize"  %>
  <%= stylesheet_link_tag "visualize-dark" %>
<% end %>
<h2>Statistics</h2>
<table id="discounts">
  <tbody>
    <caption>Discounts Generated</caption>
    <thead>
      <td>
      </td>
      <th scope="col">
        Discounts
      </th>
    </thead>
    <tr>
      <th scope="row">
        Used
      </th>
      <td>
        <%= @used.count+1 %>
      </td>
    </tr>
    <tr>
      <th scope="row">
        Unused
      </th>
      <td>
        <%= @unused.count %>
      </td>
    </tr>
  </tbody>
</table>

<div style="width:420px;height:300px" id="pie_dish" class="visualize"></div>

<% content_for(:jquery) do %>
  $('table').visualize({type: 'pie', height: '300px', width: '420px', pieLabelsAsPercent: false}, $("#pie_dish"));
<% end %>