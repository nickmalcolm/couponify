<h1>Listing shops</h1>

<table>
  <tr>
    <th>Shopify</th>
    <th>Domain</th>
    <th>Api password</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shops.each do |shop| %>
  <tr>
    <td><%= shop.shopify_id %></td>
    <td><%= shop.domain %></td>
    <td><%= shop.api_password %></td>
    <td><%= link_to 'Show', shop %></td>
    <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
    <td><%= link_to 'Destroy', shop, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

