<h1>Listing orders</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Total price</th>
    <th>Total discounts</th>
    <th>Shopify</th>
    <th>Total line items price</th>
    <th>Subtotal price</th>
    <th>Buyer accepts marketing</th>
    <th>Customer</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.name %></td>
    <td><%= order.email %></td>
    <td><%= order.total_price %></td>
    <td><%= order.total_discounts %></td>
    <td><%= order.shopify_id %></td>
    <td><%= order.total_line_items_price %></td>
    <td><%= order.subtotal_price %></td>
    <td><%= order.buyer_accepts_marketing %></td>
    <td><%= order.customer_id %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

