<!DOCTYPE html>
<html>
<head>
  <title>Shopify Application</title>
  <%= stylesheet_link_tag :all, "reset", "cupertino/jquery-ui-1.8.13.custom.css", "960", "formtastic", "style" %>
  <%= javascript_include_tag "application", "jquery-1.6.1.min.js", "jquery-ui-1.8.13.custom.min.js" %>
  <%= csrf_meta_tag %>
  <%= content_for(:head) %>
</head>

<body>
  <div id="header">
    <div class="container12">
      <div class="grid12">
        <h1> <%= link_to (image_tag "banner.png", :alt=>"couponify"), root_url, :class=> "logo", :name=>"couponify" %></h1>
        <ul id="tabs">
          <% if current_shop %>
            <li>
              <%= link_to 'Promotions', discount_templates_path %>
            </li>
            <li>
              <%= link_to "Shopify", "https://#{current_shop.domain}/admin", :class => 'shop_name' %>
            </li>
          <% else %>
            <li>
              <%= link_to 'Log In', login_path %>
            </li>
          <% end %>
          <li>
            <%= link_to "Help", root_url %>
          </li>
        </ul>
      </div>
    </div>
  </div>
  
  <div class="content container12">
    <!-- Flash error & notice-->
    <% if flash[:error] %> <div id="flasherrors"><%= flash[:error] %></div><% end %>
    <% if flash[:notice] %><div id="flashnotices"><%= flash[:notice] %></div><% end %>

    <!-- begin div.main-->
    <div id="main" class="grid12">
      <%= yield %>
    </div>
    <!-- end div.main -->
  </div>
  
  <div class="clear"></div>
  
  <script>
  $(document).ready(
    function(){
      <%= content_for(:jquery) %>
    });
  </script>
</body>
</html>